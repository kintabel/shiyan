-item>\r\n          </el-col>\r\n          <el-col :span=\"12\">\r\n            <el-form-item label=\"血压(mmHg)\" prop=\"blood_pressure\">\r\n              <el-input v-model=\"report.blood_pressure\" placeholder=\"如:120/80\"></el-input>\r\n            </el-form-item>\r\n          </el-col>\r\n        </el-row>\r\n\r\n        <el-row :gutter=\"20\">\r\n          <el-col :span=\"12\">\r\n            <el-form-item label=\"心率(次/分)\" prop=\"heart_rate\">\r\n              <el-input v-model.number=\"report.heart_rate\" placeholder=\"请输入心率\"></el-input>\r\n            </el-form-item>\r\n          </el-col>\r\n          <el-col :span=\"12\">\r\n            <el-form-item label=\"血常规\" prop=\"complete_blood_count\">\r\n              <el-input v-model=\"report.complete_blood_count\" placeholder=\"请输入血常规数据\"></el-input>\r\n            </el-form-item>\r\n          </el-col>\r\n        </el-row>\r\n\r\n        <el-row :gutter=\"20\">\r\n          <el-col :span=\"12\">\r\n            <el-form-item label=\"尿常规\" prop=\"urinalysis\">\r\n              <el-input v-model=\"report.urinalysis\" placeholder=\"请输入尿常规数据\"></el-input>\r\n            </el-form-item>\r\n          </el-col>\r\n          <el-col :span=\"12\">\r\n            <el-form-item label=\"传染病\" prop=\"contagious_disease\">\r\n              <el-input v-model=\"report.contagious_disease\" placeholder=\"请输入传染病情况\"></el-input>\r\n            </el-form-item>\r\n          </el-col>\r\n        </el-row>\r\n\r\n        <el-form-item>\r\n          <el-button type=\"primary\" @click=\"submitForm\">提交</el-button>\r\n          <el-button @click=\"resetForm\">重置</el-button>\r\n        </el-form-item>\r\n      </el-form>\r\n    </div>\r\n\r\n    <!-- 历史档案记录 -->\r\n    <div class=\"history-records\" v-if=\"historyRecords.length > 0\">\r\n      <h3>历史档案记录</h3>\r\n      <el-table :data=\"historyRecords\" stripe>\r\n        <el-table-column prop=\"report_type\" label=\"报告类型\" width=\"100\"></el-table-column>\r\n        <el-table-column prop=