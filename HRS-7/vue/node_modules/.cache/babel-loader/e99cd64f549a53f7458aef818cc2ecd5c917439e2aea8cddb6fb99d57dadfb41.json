ryRecords: [],\r\n      loading: false,\r\n      error: '',\r\n      informationId: null // 从路由或参数中获取的住院信息ID\r\n    };\r\n  },\r\n  computed: {\r\n    reportType() {\r\n      return this.report.report_type;\r\n    }\r\n  },\r\n  created() {\r\n    // 从路由参数中获取住院信息ID\r\n    this.informationId = this.$route.params.informationId;\r\n    this.report.information_id = this.informationId;\r\n\r\n    // 加载历史档案记录\r\n    this.fetchHistoryRecords();\r\n  },\r\n  methods: {\r\n    // 获取历史档案记录\r\n    fetchHistoryRecords() {\r\n      this.loading = true;\r\n      this.error = '';\r\n\r\n      this.$request.get('/report/list', {\r\n        params: { information_id: this.informationId }\r\n      })\r\n          .then(response => {\r\n            if (response.code === 200) {\r\n              this.historyRecords = response.data || [];\r\n            } else {\r\n              this.error = response.message || '获取历史记录失败';\r\n            }\r\n          })\r\n          .catch(error => {\r\n            console.error('获取历史记录失败:', error);\r\n            this.error = '获取历史记录失败，请稍后重试';\r\n          })\r\n          .finally(() => {\r\n            this.loading = false;\r\n          });\r\n    },\r\n\r\n    // 报告类型变化处理\r\n    handleReportTypeChange(value) {\r\n      this.report.report_type = value;\r\n    },\r\n\r\n    // 提交表单\r\n    submitForm() {\r\n      this.$refs.reportForm.validate(valid => {\r\n        if (valid) {\r\n          this.loading = true;\r\n\r\n          this.$request.post('/report/create', this.report)\r\n              .then(response => {\r\n                if (response.code === 200) {\r\n                  this.$message.success('档案提交成功');\r\n                  this.resetForm();\r\n                  this.fetchHistoryRecords();\r\n                } else {\r\n                  this.$message.error(response.message || '档案提交失败');\r\n                }\r\n              })\r\n              .catch(error => {\r\n                console.error('档案提交失败:', error);\r\n                this.$message.error('档案提交失败，请稍后重试');\r\n              })\r\n              .finally(() => {\r\n                this.loading = false;\r\n              });\r\n        } else {\r\n          return false;\r\n        }\r\n      });\r\n    },\r\n\r\n    // 重置表单\r\n    resetForm() {\r\n      this.$refs.reportForm.resetFields();\r\n      // 重置后保留报告类型和住院信息ID\r\n      this.report.report_type = '入院';\r\n      this.report.information_id = this.informationId;\r\n    },\r\n\r\n    // 查看详情\r\n    viewDetail(record) {\r\n      this.$alert(`\r\n        <div>\r\n          <p><strong>报告类型:</strong> ${record.report_type}</p>\r\n          <p><strong>性别:</strong> ${record.patient_gender}</p>\r\n          <p><strong>年龄:</strong> ${record.patient_age}</p>\r\n          <p><strong>身高:</strong> ${record.patient_height} cm</p>\r\n          <p><strong>体重:</strong> ${record.patient_weight} kg</p>\r\n          <p><strong>血压:</strong> ${record.blood_pressure} mmHg</p>\r\n          <p><strong>心率:</strong> ${record.heart_rate} 次/分</p>\r\n          <p><strong>血常规:</strong> ${record.complete_blood_count}</p>\r\n          <p><strong>尿常规:</strong> ${record.urinalysis}</p>\r\n          <p><strong>传染病:</strong> ${record.contagious_disease}</p>\r\n        </div>\r\n      `, '档案详情', {\r\n        dangerouslyUseHTMLString: true,\r\n        customClass: 'report-detail-dialog'\r\n      });\r\n    },\r\n\r\n    // 删除记录\r\n    deleteRecord(id) {\r\n      this.$confirm('确定删除该档案记录吗？', '提示', {\r\n        confirmButtonText: '确定',\r\n        cancelButtonText: '取消',\r\n        type: 'warning'\r\n      }).then(() => {\r\n        this.$request.delete(`/report/delete/${id}`)\r\n            .then(response => {\r\n              if (response.code === 200) {\r\n                this.$message.success('删除成功');\r\n                this.fetchHistoryRecords();\r\n              } else {\r\n                this.$message.error(response.message || '删除失败');\r\n              }\r\n            })\r\n            .catch(error => {\r\n              console.error('删除失败:', error);\r\n              this.$message.error('删除失败，请稍后重试');\r\n            });\r\n      }).catch(() => {\r\n        // 用户取消操作\r\n      });\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.hospitalization {\r\n  padding: 20px;\r\n}\r\n\r\n.loading,\r\n.error {\r\n  text-align: center;\r\n  margin-top: 20px;\r\n  font-size: 16px;\r\n  color: #666;\r\n}\r\n\r\n.error {\r\n  color: #f56c6c;\r\n}\r\n\r\n.report-form {\r\n  margin-top: 20px;\r\n  padding: 20px;\r\n  background-color: #fff;\r\n  border-radius: 4px;\r\n  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.history-records {\r\n  margin-top: 30px;\r\n}\r\n\r\n/* 详情对话框样式 */\r\n.report-detail-dialog {\r\n  width: 60%;\r\n  max-width: 800px;\r\n}\r\n\r\n.report-detail-dialog p {\r\n  margin: 10px 0;\r\n  line-height: 1.6;\r\n}\r\n</style>"],"mappings":"AAmHA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,MAAA;QACAC,WAAA;QACAC,cAAA;QACAC,WAAA;QACAC,cAAA;QACAC,cAAA;QACAC,cAAA;QACAC,UAAA;QACAC,oBAAA;QACAC,UAAA;QACAC,kBAAA;QACAC,cAAA;MACA;MACAC,KAAA;QACAX,WAAA,GACA;UAAAY,QAAA;UAAAC,OAAA;UAAAC,OAAA;QAAA,EACA;QACAb,cAAA,GACA;UAAAW,QAAA;UAAAC,OAAA;UAAAC,OAAA;QAAA,EACA;QACAZ,WAAA,GACA;UAAAU,QAAA;UAAAC,OAAA;UAAAC,OAAA;QAAA,GACA;UAAAC,IAAA;UAAAF,OAAA;UAAAC,OAAA;QAAA,EACA;QACAT,cAAA,GACA;UAAAO,QAAA;UAAAC,OAAA;UAAAC,OAAA;QAAA,EACA;QACAR,UAAA,GACA;UAAAM,QAAA;UAAAC,OAAA;UAAAC,OAAA;QAAA;MAEA;MACAE,cAAA;MACAC,OAAA;MACAC,KAAA;MACAC,aAAA;IACA;EACA;;EACAC,QAAA;IACAC,WAAA;MACA,YAAAtB,MAAA,CAAAC,WAAA;IACA;EACA;EACAsB,QAAA;IACA;IACA,KAAAH,aAAA,QAAAI,MAAA,CAAAC,MAAA,CAAAL,aAAA;IACA,KAAApB,MAAA,CAAAW,cAAA,QAAAS,aAAA;;IAEA;IACA,KAAAM,mBAAA;EACA;EACAC,OAAA;IACA;IACAD,oBAAA;MACA,KAAAR,OAAA;MACA,KAAAC,KAAA;MAEA,KAAAS,QAAA,CAAAC,GAAA;QACAJ,MAAA;UAAAd,cAAA,OAAAS;QAAA;MACA,GACAU,IAAA,CAAAC,QAAA;QACA,IAAAA,QAAA,CAAAC,IAAA;UACA,KAAAf,cAAA,GAAAc,QAAA,CAAAhC,IAAA;QACA;UACA,KAAAoB,KAAA,GAAAY,QAAA,CAAAjB,OAAA;QACA;MACA,GACAmB,KAAA,CAAAd,KAAA;QACAe,OAAA,CAAAf,KAAA,cAAAA,KAAA;QACA,KAAAA,KAAA;MACA,GACAgB,OAAA;QACA,KAAAjB,OAAA;MACA